{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/dist/**",
      "Dockerfile",
      ".dockerignore",
      "functions/**",
      "**/*.md",
      "src/**",
      "scripts/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
